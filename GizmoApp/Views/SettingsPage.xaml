<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GizmoApp.Views.SettingsPage"
             Title="SettingsPage">
    <VerticalStackLayout Spacing="15"
                         Padding="30">
        
        <Label 
            Text="Heimnetz-SSID" Style="{StaticResource SubHeadline}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        
        <Entry x:Name="SsidEntry"
               Placeholder="Geben Sie die SSID Ihres Heimnetzwerks ein"/>
        <Border Style="{StaticResource ButtonBorder}">
            <Button Text="Speichern"
                Clicked="OnSaveClicked"/>
        </Border>
    </VerticalStackLayout>
</ContentPage>