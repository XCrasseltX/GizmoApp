<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Glassmorphism Base Style -->
    <Style x:Key="GlassPanel" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{StaticResource TransparentGray}"/>
        <Setter Property="StrokeThickness" Value="3"/>
        <Setter Property="Stroke" Value="{StaticResource TransparentWhite}"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 15"/>
    </Style>

    <!-- Glass Button -->
    <Style x:Key="GlassButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource TransparentGray}"/>
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource PrimaryText}, Dark={StaticResource PrimaryDarkText}}"/>
        <Setter Property="BorderColor" Value="{StaticResource TransparentWhite}"/>
        <Setter Property="BorderWidth" Value="2"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="FontFamily" Value="ComicNeueSansID"/>
        <Setter Property="FontSize" Value="14" />
    </Style>

    <!-- Glass Entry -->
    <Style x:Key="GlassEntry" TargetType="Editor">
        <Setter Property="BackgroundColor" Value="{StaticResource TransparentGray}"/>
        <Setter Property="PlaceholderColor" Value="{AppThemeBinding Light={StaticResource SecondaryDarkText}, Dark={StaticResource SecondaryDarkText}}"/>
        <Setter Property="FontAttributes" Value="Bold"/>
    </Style>

    <!-- Chat History Item Border -->
    <Style x:Key="ChatHistoryItem" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{StaticResource TransparentGray}"/>
        <Setter Property="StrokeThickness" Value="2"/>
        <Setter Property="Stroke" Value="{StaticResource TransparentWhite}"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Margin" Value="0,5"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 10"/>
    </Style>

    <!-- Chat History Title Label -->
    <Style x:Key="ChatHistoryTitle" TargetType="Label">
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontFamily" Value="ComicNeueSansID"/>
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource PrimaryText}, Dark={StaticResource PrimaryDarkText}}"/>
    </Style>

    <!-- Chat Preview Text Label -->
    <Style x:Key="ChatPreviewText" TargetType="Label">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontFamily" Value="ComicNeueSansID"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource PrimaryText}, Dark={StaticResource PrimaryDarkText}}"/>
        <Setter Property="LineBreakMode" Value="TailTruncation"/>
        <Setter Property="MaxLines" Value="2"/>
    </Style>

    <!-- Chat Timestamp Label -->
    <Style x:Key="ChatTimestamp" TargetType="Label">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontFamily" Value="ComicNeueSansID"/>
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource SecondaryText}, Dark={StaticResource SecondaryDarkText}}"/>
        <Setter Property="Opacity" Value="0.7"/>
    </Style>

    <!-- Round Icon Button (für + und ✕) -->
    <Style x:Key="RoundIconButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource GlassGreen}"/>
        <Setter Property="TextColor" Value="{StaticResource PrimaryDarkText}"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="WidthRequest" Value="40"/>
        <Setter Property="HeightRequest" Value="40"/>
        <Setter Property="CornerRadius" Value="20"/>
        <Setter Property="BorderWidth" Value="0"/>
    </Style>

    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource PrimaryText}, Dark={StaticResource PrimaryDarkText}}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontFamily" Value="ComicNeueSansID"/>
    </Style>

    <Style TargetType="Label" x:Key="Headline">
        <Setter Property="FontSize" Value="32" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
    </Style>

    <Style TargetType="Label" x:Key="SubHeadline">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
    </Style>

    <Style TargetType="Editor">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource PrimaryText}, Dark={StaticResource PrimaryDarkText}}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontFamily" Value="ComicNeueSansID"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
    </Style>

    <Style TargetType="Border" x:Key="GizmoChat">
        <Setter Property="HorizontalOptions" Value="Start"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="Margin" Value="10,5,10,5"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 5,15,15,15"/>
        <Setter Property="Stroke" Value="Transparent"/>
        <Setter Property="StrokeThickness" Value="1"/>
        <Setter Property="MaximumWidthRequest" Value="400"/>
    </Style>

    <Style TargetType="Border" x:Key="UserChat">
        <Setter Property="HorizontalOptions" Value="End"/>
        <Setter Property="BackgroundColor" Value="#1A00FFB3"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="Margin" Value="10,5,10,5"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 15,15,5,15"/>
        <Setter Property="Stroke" Value="{StaticResource TransparentWhite}"/>
        <Setter Property="StrokeThickness" Value="1"/>
        <Setter Property="MaximumWidthRequest" Value="400"/>
    </Style>
    
    <Style TargetType="Page" ApplyToDerivedTypes="True">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource OffBlack}}" />
    </Style>

</ResourceDictionary>
